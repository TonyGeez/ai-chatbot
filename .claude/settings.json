  "permissions": {
    "allow": [
      "Bash",
      "BashOutput",
      "AskUserQuestion",
      "TodoWrite",
      "Task",
      "Skill",
      "KillShell",
      "mcp__filesystem",
      "mcp__memory",
      "Glob",
      "Grep",
      "Skill"
